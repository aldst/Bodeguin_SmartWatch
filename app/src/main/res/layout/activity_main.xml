<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.drawer.WearableDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dlNavigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding">

        <ImageView
            android:id="@+id/logo_nombre_image"
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:layout_gravity="top|center"
            android:layout_marginStart="20dp"
            android:src="@drawable/logo_bodeguin" />

        <ImageView
            android:id="@+id/logo_bodegin_image"
            android:layout_width="54dp"
            android:layout_height="41dp"
            android:layout_gravity="top|center"
            android:layout_marginEnd="40dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_grocery_image" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/general_product_name"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_store_image" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/general_store_name"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/ibLocationCheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:background="@null"
        android:src="@android:drawable/ic_menu_mylocation" />

    <androidx.wear.widget.drawer.WearableNavigationDrawerView
        android:id="@+id/wnTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:navigationStyle="multiPage" />

</androidx.wear.widget.drawer.WearableDrawerLayout>